<UserControl x:Class="Hoursly.Views.ProjectsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Hoursly.Views"
             xmlns:enums="clr-namespace:Hoursly.Common.Extensions.Enums"
             xmlns:models="clr-namespace:Hoursly.Models"
             xmlns:entities="clr-namespace:Hoursly.Entities"
             xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="0,-10,0,10">
        <Button Content="{Binding EditOrCreateText}"
                HorizontalAlignment="Left"
                Margin="567,217,0,0"
                VerticalAlignment="Top"
                Width="75"
                x:Name="CreateOrUpdate" />
        <DataGrid HorizontalAlignment="Left"
                  IsReadOnly="True"
                  SelectionUnit="FullRow"
                  SelectionMode="Single"
                  SelectedItem="{Binding SelectedProject, Mode=TwoWay}"
                  x:Name="Projects"
                  Height="292"
                  Margin="25,33,0,0"
                  VerticalAlignment="Top"
                  Width="439" />
        <TextBox
            x:Name="Name"
            HorizontalAlignment="Left"
            Height="22"
            Margin="522,76,0,0"
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            Width="120" />
        <Label Content="Name" HorizontalAlignment="Left" Margin="484,75,0,0" VerticalAlignment="Top" Width="38"
               FontSize="9" />
        <DatePicker x:Name="StartDate" HorizontalAlignment="Left" Margin="522,104,0,0" VerticalAlignment="Top"
                    Width="120" />
        <DatePicker x:Name="EndDate" HorizontalAlignment="Left" Margin="522,133,0,0" VerticalAlignment="Top"
                    Width="120" />
        <ComboBox HorizontalAlignment="Left"
                  SelectedValue="{Binding Path=Priority}"
                  ItemsSource="{Binding Source={enums:EnumBindingSource {x:Type entities:ProjectPriority}}}"
                  Margin="522,162,0,0" VerticalAlignment="Top" Width="120" />
        <TextBox x:Name="TaskLimit" HorizontalAlignment="Left" Height="23" Margin="522,189,0,0" TextWrapping="Wrap"
                 VerticalAlignment="Top" Width="120" />
        <Label Content="Start Date" HorizontalAlignment="Left" Margin="467,104,0,0" VerticalAlignment="Top" Width="55"
               FontSize="9" />
        <Label Content="End Date" HorizontalAlignment="Left" Margin="475,133,0,0" VerticalAlignment="Top" Width="47"
               FontSize="9" RenderTransformOrigin="0.045,-0.227" />
        <Label Content="Priority" HorizontalAlignment="Left" Margin="478,162,0,0" VerticalAlignment="Top" Width="44"
               FontSize="9" />
        <Label Content="Task Limit" HorizontalAlignment="Left" Margin="467,189,0,0" VerticalAlignment="Top" Width="55"
               FontSize="9" />
        <Label Content="Projekty" HorizontalAlignment="Left" Margin="25,10,0,0" VerticalAlignment="Top" />
        <Button Content="Delete"
                x:Name="Delete"
                IsEnabled="{Binding EditMode, Mode=TwoWay}"
                HorizontalAlignment="Left"
                Margin="484,217,0,0"
                VerticalAlignment="Top"
                Width="75" />
        <Button Content="Clear Selection"
                x:Name="ClearSelection"
                Visibility="{Binding EditMode, Mode=TwoWay}"
                HorizontalAlignment="Left"
                Margin="25,330,0,0"
                VerticalAlignment="Top"
                Width="88" />
    </Grid>
</UserControl>